{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@share/*": ["*"],
            "@stylesheet/*": ["./apps/nt-stylesheet/*"],
            "@headless-ui/*": ["./apps/nt-headless-ui/*"],
            "@nashtech/*": ["*/node_modules/@nashtech/"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
