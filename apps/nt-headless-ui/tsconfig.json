{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@nashtech-garage/stylesheet/*": [
                "../nt-stylesheet/dist/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "references": [
        {
            "path": "./tsconfig.storybook.json"
        }
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "../nt-stylesheet/dist/integrations/tailwind/index.cjs",
        "../../vite.base.config.ts",
        "./eslint.config.mjs",
        "scripts/generate-exports.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.stories.ts",
        "**/*.stories.js",
        "**/*.mjs"
    ]
}
