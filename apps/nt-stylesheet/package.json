{
    "name": "@nashtech-garage/stylesheet",
    "version": "1.0.4",
    "private": false,
    "description": "Style sheet for the NT Design System",
    "scripts": {
        "build": "pnpm vite build",
        "test": "npx vitest",
        "lint": "pnpm eslint && npx stylelint \"**/*.scss\"",
        "typecheck": "tsc --pretty --noEmit"
    },
    "keywords": [],
    "author": "NashTech",
    "license": "MIT",
    "type": "module",
    "files": [
        "dist",
        "bin",
        "themes",
        "main.ts",
        "tailwind.config.js",
        "postcss.config.js",
        "LICENSE",
        "README.md",
        "package.json",
        "!**/*.scss"
    ],
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/scripts/index.js",
            "require": "./dist/scripts/index.cjs"
        },
        "./css/nt.css": {
            "default": "./dist/css/nt.css"
        },
        "./css/nt-icons.css": {
            "default": "./dist/css/nt-icons.css"
        },
        "./integrations/tailwind": {
            "types": "./dist/integrations/tailwind/index.d.ts",
            "import": "./dist/integrations/tailwind/index.js",
            "require": "./dist/integrations/tailwind/index.js"
        },
        "./integrations/tailwind/style.css": {
            "default": "./dist/integrations/tailwind/style.css"
        }
    },
    "typesVersions": {
        "*": {
            "tailwind": [
                "dist/integrations/tailwind/index.d.ts"
            ]
        }
    },
    "devDependencies": {
        "@eslint/eslintrc": "catalog:",
        "cpx": "catalog:",
        "cssnano": "catalog:",
        "eslint-config-custom-lib": "workspace:*",
        "postcss-reporter": "catalog:",
        "sass": "catalog:",
        "sass-embedded": "catalog:",
        "stylelint": "catalog:",
        "stylelint-custom-lib": "workspace:*",
        "tsconfig": "workspace:*",
        "vite-bundle-visualizer": "catalog:",
        "vite-plugin-dts": "catalog:",
        "vite-plugin-sass-dts": "catalog:"
    },
    "dependencies": {
        "@mdi/font": "catalog:",
        "autoprefixer": "catalog:",
        "dompurify": "catalog:",
        "postcss": "catalog:",
        "postcss-import": "catalog:",
        "postcss-nesting": "catalog:",
        "postcss-preset-env": "catalog:",
        "tailwindcss": "catalog:"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    }
}
