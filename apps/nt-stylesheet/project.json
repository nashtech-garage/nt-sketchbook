{
    "name": "nt-stylesheet",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "root": "apps/nt-stylesheet",
    "srcRoot": "apps/nt-stylesheet/src",
    "targets": {
        "build": {
            "executor": "@nx/vite:build",
            "options": {
                "configFile": "{projectRoot}/vite.config.ts",
                "outputPath": "{projectRoot}/dist"
            }
        },
        "dev": {
            "executor": "@nx/vite:build",
            "options": {
                "configFile": "{projectRoot}/vite.config.ts",
                "outputPath": "{projectRoot}/dist",
                "watch": true
            }
        }
    }
}
