{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "dist"
    },
    "include": ["**/*.ts", "**/*.js"],
    "exclude": ["node_modules", "vite.config.ts"]
}
